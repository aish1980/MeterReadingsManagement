@model MeterReadingsManagement.Models.MeterReading

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 my-3 border">
    <h5> Add New Meter Reading</h5>

    <div class="row">
        <div class="col-sm-6">
            <hr />
            <form asp-action="Insert">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="AccountId" class="control-label"></label>
                   
                    <input asp-for="AccountId" class="form-control" />
                    <span asp-validation-for="AccountId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MeterReadingDateTime" class="control-label"></label>
                    <input asp-for="MeterReadingDateTime" class="form-control" />
                    <span asp-validation-for="MeterReadingDateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MeterReadValue" class="control-label"></label>
                    <input asp-for="MeterReadValue" class="form-control" />
                    <span asp-validation-for="MeterReadValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Save" />
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}